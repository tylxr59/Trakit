{
	"name": "trakit",
	"version": "0.2.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"migrate:up": "dotenv -e .env -- node-pg-migrate up",
		"migrate:down": "dotenv -e .env -- node-pg-migrate down",
		"migrate:create": "dotenv -e .env -- node-pg-migrate create"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.14.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.4",
		"@types/node": "^22.10.5",
		"@types/nodemailer": "^6.4.17",
		"@types/pg": "^8.11.10",
		"@typescript-eslint/eslint-plugin": "^8.20.0",
		"@typescript-eslint/parser": "^8.20.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"postcss": "^8.4.49",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.17.0",
		"svelte-check": "^4.1.3",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"vite-plugin-pwa": "^0.21.2",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@iconify/svelte": "^4.1.0",
		"@lucia-auth/adapter-postgresql": "^3.0.2",
		"@material/material-color-utilities": "^0.3.0",
		"@node-rs/argon2": "^2.0.0",
		"dotenv-cli": "^7.4.2",
		"html2canvas": "^1.4.1",
		"lucia": "^3.2.2",
		"node-pg-migrate": "^7.8.2",
		"nodemailer": "^6.9.16",
		"oslo": "^1.2.1",
		"pg": "^8.13.1"
	},
	"overrides": {
		"cookie": "^0.7.2",
		"glob": "^11.0.4",
		"nodemailer": "^6.9.16"
	}
}

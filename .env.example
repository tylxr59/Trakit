# Database
DATABASE_URL=postgresql://trakit:trakit@localhost:5432/trakit

# Auth
EMAIL_VERIFICATION_REQUIRED=false
ALLOW_REGISTRATION=true

# SMTP (only needed if EMAIL_VERIFICATION_REQUIRED=true)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Trakit <noreply@example.com>

# App
PUBLIC_APP_URL=http://localhost:5173

# Notifications (optional - only needed if you want reminder notifications)
# Generate keys with: npm run generate:notification-keys
NOTIFICATION_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here
PUBLIC_VAPID_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_EMAIL=noreply@yourdomain.com
